{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "lib": [
            "ES2022"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@lib": [
                "src/lib/index.ts"
            ],
            "@lib/*": [
                "src/lib/*"
            ],
            "@handlers/*": [
                "src/handlers/*"
            ],
            "@models/*": [
                "src/models/*"
            ],
            "@validators/*": [
                "src/validators/*"
            ],
            "@middleware": [
                "src/middleware/index.ts"
            ],
            "@middleware/*": [
                "src/middleware/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts"
    ]
}